<sap:WorkflowElementDialog x:Class="Plugins.Shared.Library.Editors.VBAScriptEditorDialog"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                           xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation" 
                           xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
                           xmlns:lcz="clr-namespace:Plugins.Shared.Library.Properties"
                           sap:Title="{x:Static lcz:Resources.ScriptEditorDialogTitle}" 
                           MinHeight="450" MinWidth="600" 
                           sap:WindowSizeToContent="Manual" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="lblContentTitle" Content="{x:Static lcz:Resources.VBAScriptEditorLabel}" HorizontalAlignment="Left" Grid.Row="0" />
        <DockPanel LastChildFill="True" Grid.Row="1">
            <avalonEdit:TextEditor Background="{DynamicResource Module.Script.Background}" Foreground="{DynamicResource Module.Script.Foreground}" Name="textEditor" DockPanel.Dock="Top" 
				FontSize="18"
				ShowLineNumbers="True"/>
        </DockPanel>
    </Grid>
</sap:WorkflowElementDialog>